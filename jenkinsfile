pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Clone the repository
                git url: 'https://github.com/Joshisumedhraj/BloqWeb-demo.git', branch: 'main'
            }
        }

        stage('Install Dependencies') {
            steps {
                // Install Node.js dependencies
                sh 'npm install -g newman'
            }
        }

        stage('Run Postman Collection') {
            steps {
                // Run the Postman collection
                sh 'newman run Health-Check.postman_collection.json -r htmlextra'
            }
        }
    
        stages {
        stage('Generate Report') {
            steps {
                // Assuming your script generates the report in the specified directory
                sh 'mkdir -p /var/lib/jenkins/workspace/BloqWeb/Report-Bq && echo "<html><body><h1>Report</h1></body></html>" > /var/lib/jenkins/workspace/BloqWeb/Report-Bq/index.html'
            }
        }
    }
    
    post {
        success {
            publishHTML(target: [
                reportName : 'My Report',
                reportDir  : '/var/lib/jenkins/workspace/BloqWeb/Report-Bq',
                reportFiles: 'index.html',
                keepAll    : true,
                alwaysLinkToLastBuild: true,
                allowMissing: false
            ])
        }
    }
}
